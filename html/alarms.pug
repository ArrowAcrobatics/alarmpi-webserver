include alarm-mixin
include vlc-debug-ui
include alarm-gpio-ui

doctype html
html(lang="en")
    head
        include alarms-head
    body
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js", integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm", crossorigin="anonymous")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/css/bootstrap5-toggle.min.css", rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/js/bootstrap5-toggle.ecmas.min.js")

        script(src="js/main.js", type="module")
        .d-flex.justify-content-center
            .thecontent
                h1 Alarmpi 0.2
        .d-flex.justify-content-center
            .d-flex(style="width: 25em")
                #alarm-container.d-flex.justify-content-center.vstack
                    ul#sortable(style="width: 25em")
                        +vlc_debug_mixin()
                        +gpio_debug_mixin()
                        each alarm in alarms
                            +alarm_mixin(alarm)
                    .d-flex.align-items-end.flex-column
                        .d-flex.btn-group
                            button.btn.btn-primary.bg-custom-light-dark.alarmpi-debug
                                i.fas.fa-bug(aria-hidden="true")
                        .d-flex.btn-group
                            button.btn.btn-primary.bg-custom-light-dark.alarmpi-add
                                i.fas.fa-plus(aria-hidden="true")
                            button.btn.btn-primary.bg-custom-light-dark.alarmpi-save
                                i.fas.fa-save(aria-hidden="true")
        .d-flex.justify-content-center
